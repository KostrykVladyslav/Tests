<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPassedTests"
            style="@style/whiteTextTestName"
            android:layout_width="@dimen/fill_space"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewTestName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTestName"
            style="@style/whiteTextTestName"
            android:layout_width="@dimen/fill_space"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/little_margin"
            android:paddingVertical="@dimen/little_margin"
            android:paddingBottom="@dimen/little_margin"
            android:textSize="@dimen/large_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPassedTests"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>