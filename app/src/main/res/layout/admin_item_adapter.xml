<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewId"
            style="@style/whiteTextTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:textSize="@dimen/standard_text_size"
            android:text="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLogin"
            style="@style/whiteTextTestName"
            android:layout_width="@dimen/fill_space"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:paddingBottom="@dimen/little_margin"
            android:textSize="@dimen/large_text_size"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewRole" />

        <TextView
            android:id="@+id/textViewRole"
            style="@style/whiteTextTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:layout_marginTop="@dimen/little_margin"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="@id/textViewLogin"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>